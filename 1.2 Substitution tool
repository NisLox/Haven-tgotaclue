from collections import OrderedDict

def sortCipher():
    input = raw_input("Please input the cipher: ")
    nondupe = "".join(OrderedDict.fromkeys(input))
    print "Cipher characters: " + nondupe
    new = input #Init replacement
    s = list(nondupe)
    p = []
    for i in range(len(s)):
        u = raw_input("What would you like to change " + s[i] + " to? ")
        p.append(u)
        print p
        new = new.replace(s[i], u)
        print input, " -- ", new
    return     
    
sortCipher()
