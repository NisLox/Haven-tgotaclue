import enchant
import re
import string
from collections import OrderedDict
from collections import Counter
alphabet12 = list("abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ")
d = enchant.Dict("en_us")
letters12 = ["e, t, a, o, i, n, s, h, r, d, l, c, u, m, w, f, g, y, p, b, v, k, j, x, q, z"]
let = ["e, t, a, o, i, n"]
line = "-----------------------------------------------------------"

def returnMenu():
    reply = raw_input("Do you want to go back to the Menu? [y/n]: ")

    if reply == "N":
        raise SystemExit
    elif reply == "Y":
        amazingMenu()
    elif reply == "n":
        raise SystemExit
    elif reply == "y":
        amazingMenu()
    return

def cipher():
    
    message = raw_input("Please write the message you wish to encipher: ")
    message1 = input("how much do you want to shift it by? ")

    cipher = ""
   
    alphabet = string.ascii_lowercase

    for a in message:

        cipher = cipher + alphabet12[((alphabet12.index(a) + message1) % 26)]

    print cipher

def decipher():
    
    message = raw_input("Please write the message you wish to decipher: ")
    message1 = input("how much do you want to shift it back by? ")

    cipher = ""
   
    alphabet = string.ascii_lowercase

    for a in message:

        cipher = cipher + alphabet12[((alphabet12.index(a) + 26 - message1) % 26)]

    print cipher 

