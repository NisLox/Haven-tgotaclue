import enchant
import re
from collections import OrderedDict
from collections import Counter

d = enchant.Dict("en_us")


line = "-----------------------------------------------------------"

def sortCipher():
    input = raw_input("Please input the cipher: ")
    nondupe = "".join(OrderedDict.fromkeys(input))
    print "Cipher characters: " + nondupe
    new = input #Init replacement
    s = list(nondupe)
    p = []
    for i in range(len(s)):
        u = raw_input("What would you like to change " + s[i] + " to? ")
        print line
        p.append(u)
        print p
        new = new.replace(s[i], u)
        print input, " -- ", new
        print line
    return new

new = sortCipher()

b = Counter(new)
print b
print line
print new
wordList = re.sub("[^\w]", " ", new).split()

for i in range(len(wordList)):
    hehe = d.check(wordList[i])

print "The spelling is: " + (str(hehe))

makeList = list(b.elements())

common = Counter(makeList).most_common(10)
print common
