import re
import enchant
from collections import OrderedDict
from collections import Counter
import collections

d = enchant.Dict("en_us")
common = ["e, t, a, o, i, n, s, h, r, d, l, u, c, m, w, f, y, g, p, b, v, k, x, j, q, z"]
line = "-----------------------------------------------------------"

def sortCipher():
    input = raw_input("Please input the cipher: ")
    nondupe = "".join(OrderedDict.fromkeys(input))
    print "Cipher characters: " + nondupe
    new = input #Init replacement
    s = list(nondupe)
    p = []
    for i in range(len(s)):
        u = raw_input("What would you like to change " + s[i] + " to? ")
        print line
        p.append(u)
        print p
        new = new.replace(s[i], u)
        print input, " -- ", new
        print line
    return new

new = sortCipher()
print new

