letters = collections.defaultdict(int)
for letter in new:
    letters[letter] += 1
print letters.sort()


wordList = re.sub("[^\w]", " ", new).split()#Puts it in a list

for i in range(len(wordList)):
    spell = d.check(wordList[i])

print "The spelling is: " + (str(spell))
